generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
}

model Restaurant {
  id            String     @id @default(uuid())
  name          String     @unique
  slug          String     @unique
  description   String?
  categories    Category[]
  phone         Phone[]
  social        Social[]
  address       Address[]
  opening_hours String
  images        Image[]
  products      Product[]
  created_at    DateTime   @default(now())
}

model Category {
  id           String  @id @default(uuid())
  name         String
  restaurantId String?

  Restaurant Restaurant? @relation(fields: [restaurantId], references: [id])
}

model Phone {
  id           String  @id @default(uuid())
  value        String
  restaurantId String?

  Restaurant Restaurant? @relation(fields: [restaurantId], references: [id])
}

model Social {
  id           String        @id @default(uuid())
  type         SocialNetwork
  url          String
  restaurantId String?

  Restaurant Restaurant? @relation(fields: [restaurantId], references: [id])
}

enum SocialNetwork {
  WhatsApp
  Facebook
  Instagram
}

model Address {
  id            String  @id @default(uuid())
  street        String
  number        String
  neighboorhood String
  city          String
  state         String
  complement    String
  postal_code   String
  country       String
  restaurantId  String?

  Restaurant Restaurant? @relation(fields: [restaurantId], references: [id])
}

model Product {
  id           String  @id @default(uuid())
  name         String
  slug         String  @unique
  description  String
  price        Int
  restaurantId String?

  images     Image[]
  Restaurant Restaurant? @relation(fields: [restaurantId], references: [id])
}

model Image {
  id           String           @id @default(uuid())
  urls         ImageVariation[]
  alt          String
  restaurantId String?
  productId    String?

  Restaurant Restaurant? @relation(fields: [restaurantId], references: [id])
  Product    Product?    @relation(fields: [productId], references: [id])
}

model ImageVariation {
  id          String  @id @default(uuid())
  url         String
  media_width Int?
  imageId     String?

  Image Image? @relation(fields: [imageId], references: [id])
}
